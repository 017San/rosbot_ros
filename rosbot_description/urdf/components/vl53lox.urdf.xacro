<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- vl53lox defining macro -->
  <xacro:macro name="vl53lox" params="xyz z prefix parent">

    <joint name="${parent}_${prefix}_range_joint" type="fixed">
        <origin xyz="${xyz}" rpy="0.0 0.0 ${z * pi/180}" />
        <parent link="${parent}" />
        <child link="${prefix}_range" />
    </joint>

    <link name="${prefix}_range" />

  </xacro:macro>
</robot>